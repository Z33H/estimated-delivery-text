<style>
  .z-delivery-info {
	margin: auto;
	margin-top: 15px;
	width: 80%;
	border-top: 1px solid grey;
	border-bottom: 1px solid grey;
  text-align:center;
}

@media only screen and (max-width: 767px) {
	.z-delivery-info {
		width: 100%;
		margin-top: 25px;
	}

	.z-delivery-info h5 {
		height: auto;
		margin-bottom: 5px;
	}
}

</style>
<div class="z-delivery-info text-center">

  {% assign firstDays = 20 | times: 24 | times: 60 | times: 60 %}
  {% assign secondDays = 30 | times: 24 | times: 60 | times: 60 %}

  <h5 style="letter-spacing:1.5px;">FREE DELIVERY</h5>
  <p>Estimated Arrival: <b>{{ 'now' | date: "%s" | plus: firstDays | date: "%b %d" }} - 
  {{ 'now' | date: "%s" | plus: secondDays | date: "%b %d" }}</b></p>

 </div>
